
@using Experts.First_Project.Web.Areas.App.Models.Common.Modals
@using Experts.First_Project.Web.Areas.App.Models.Cities
@model CityViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="CityInformationsTab">

        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Name") :</h6>
                @Model.City.Name
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("Governatate")) @L("Name") :</h6>
                @Model.GovernatateName
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithClose.cshtml")
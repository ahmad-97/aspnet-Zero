
@using System.Globalization
@using Experts.First_Project.Web.Areas.App.Models.Common.Modals
@using Experts.First_Project.Web.Areas.App.Models.Countries
@model CreateOrEditCountryModalViewModel
@using Abp.Extensions
@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditCountry")) : L("CreateNewCountry")))

<div class="modal-body">
    <div id="CountryInformationsTab">
        <form name="CountryInformationsForm" role="form" novalidate class="form-validation">

            @if (Model.IsEditMode)
            {
            <input type="hidden" name="id" value="@Model.Country.Id" />
            }

            <div class="form-group">
                <label for="Country_Code">@L("Code")</label>
                <input class="form-control" id="Country_Code" value="@Model.Country.Code" type="text" name="code" required maxlength="@Experts.First_Project.Setup.CountryConsts.MaxCodeLength" minlength="@Experts.First_Project.Setup.CountryConsts.MinCodeLength" />
            </div>

            <div class="form-group">
                <label for="Country_Desc">@L("Desc")</label>
                <input class="form-control" id="Country_Desc" value="@Model.Country.Desc" type="text" name="desc" required />
            </div>

        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")